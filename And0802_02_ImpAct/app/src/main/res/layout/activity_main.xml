        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="문자 보내기" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사진 찍기" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="연락처 보기" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일 보내기" />
